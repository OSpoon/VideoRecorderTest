<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/lay_12"
    android:layout_marginRight="@dimen/lay_12"
    android:layout_marginTop="@dimen/lay_8"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:padding="@dimen/lay_8"
        android:layout_below="@+id/videoplayer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_18"
            android:gravity="center_vertical"
            android:text="当前影像件\n生成时间:2017年7月21日 19:23:22\n大小:203M\n" />

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/lay_4">

            <ImageView
                android:id="@+id/iv_upload"
                android:layout_width="@dimen/lay_36"
                android:layout_height="@dimen/lay_36"
                android:src="@mipmap/icon_upload" />

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="@dimen/lay_36"
                android:layout_height="@dimen/lay_36"
                android:layout_marginLeft="@dimen/lay_16"
                android:src="@mipmap/icon_scan" />

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="@dimen/lay_36"
                android:layout_height="@dimen/lay_36"
                android:layout_marginLeft="@dimen/lay_16"
                android:src="@mipmap/icon_preview" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/lay_36"
                android:layout_height="@dimen/lay_36"
                android:layout_marginLeft="@dimen/lay_16"
                android:src="@mipmap/icon_delete" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
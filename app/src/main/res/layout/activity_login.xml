<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TInputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_line_edit"
            android:paddingTop="5dp">

            <EditText
                android:id="@+id/name"
                style="@android:style/Theme.Holo.InputMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:textColor="@color/white_overlay"
                android:textSize="@dimen/sp_18" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TInputNamePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/box_line_edit"

            android:paddingTop="5dp">

            <EditText
                android:id="@+id/pwd"
                style="@android:style/Theme.Holo.InputMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/white_overlay"
                android:textSize="@dimen/sp_18" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#3399ff"
            android:text="登 录"
            android:textAlignment="center"
            android:textColor="@color/white_overlay"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="© 2017 N22. All rights reserved.\n账号：abc 密码：a123456"
        android:textSize="12sp" />
</RelativeLayout>
